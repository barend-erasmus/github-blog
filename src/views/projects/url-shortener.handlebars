            <div class="panel panel-default">
                <div class="panel-heading">Create URL</div>
                <div class="panel-body">
                    <div id="createUrl">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="name" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Profile Key</label>
                            <input type="text" name="profileKey" placeholder="1PrdZbex" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Shortened URL</label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">https://url-shortener.openservices.co.za/</span>
                                <input type="text" name="shortUrl" placeholder="my-test-url" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>URL</label>
                            <input type="text" name="url" placeholder="https://example.com/hello-world" class="form-control">
                        </div>
                        <div class="form-group">
                            <input class="btn btn-default" onclick="createUrl()" type="button" value="Generate">
                        </div>
                        <label id="result"></label>
                    </div>
